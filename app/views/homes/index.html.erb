<br>


<% @posts.each do |p| %>
    <b><%= p.content %></b>
    <a href="/homes/delete/<%= p.id %>">삭제</a><br>
    
    <%= form_for @comment, url: post_comments_path(p.id), method: "POST" do |f| %>
    <%= f.text_field :memo %>
    <%= f.submit "저장" %>
    <% end %><br>
    
    <% p.comments.each do |c| %>
    · <%= c.memo %>
    <%= link_to "삭제", post_comment_path(p.id, c.id), method: "DELETE" %><br>
    <% end %>
    
    <br><br>
<% end %>


